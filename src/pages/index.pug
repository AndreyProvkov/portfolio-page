                                    Qui ut iste placeat, atque necessitatibus hic doloremque dolorem rerum rem, nemo ea consequuntur itaque consequatur numquam, blanditiis modi inventore expedita minima.
                        .tabs__content
                            .stopwatch
                                .stopwatch__times
                                    span.stopwatch__hours 00
                                    |
                                    | :
                                    |
                                    span.stopwatch__minutes 00
                                    |
                                    | :
                                    |
                                    span.stopwatch__seconds 00
                                    | .
                                    span.stopwatch__milliseconds 00
                                .stopwatch__buttons
                                    button.stopwatch__button.stopwatch__start-stop Start
                                    button.stopwatch__button.stopwatch__pause-continue Pause
                        .tabs__content
                            .timer
                                .timer__times
                                    input(type='text'  maxlength='2' size='1').timer__hours.timer__input
                                    | :
                                    input(type='text'  maxlength='2' size='1').timer__minutes.timer__input
                                    | :
                                    input(type='text'  maxlength='2' size='1').timer__seconds.timer__input
                                    | .
                                    span.timer__milliseconds 00
                                .timer__buttons
                                    button.timer__button.timer__start-stop Start
                                    button.timer__button.timer__pause-continue Pause
            +frameContent 
        +frameSlide 
            +frameContent 
            +frameContent
                .calculator
                        .calculator__display
                            input.calculator__history(type='text' value='' disabled='')
                            output.calculator__result(name='result') 0
                        .calculator__keypad
                            button.calculator__button(type='button' data-all-clear) C
                            button.calculator__button(type='button' data-backspace) &larrb;
                            button.calculator__button(type='button' data-percent) %
                            button.calculator__operator(type='button' data-operator='/') &div;
                            button.calculator__button(type='button' data-number='7') 7
                            button.calculator__button(type='button' data-number='8') 8
                            button.calculator__button(type='button' data-number='9') 9
                            button.calculator__operator(type='button' data-operator='x') &times;
                            button.calculator__button(type='button' data-number='4') 4
                            button.calculator__button(type='button' data-number='5') 5
                            button.calculator__button(type='button' data-number='6') 6
                            button.calculator__operator(type='button' data-operator='-') &minus;
                            button.calculator__button(type='button' data-number='1') 1
                            button.calculator__button(type='button' data-number='2') 2
                            button.calculator__button(type='button' data-number='3') 3
                            button.calculator__operator(type='button' data-operator='+') &plus;
                            button.calculator__button(type='button' data-negation='') &plusmn;
                            button.calculator__button(type='button' data-number='0') 0
                            button.calculator__button(type='button' data-decimal='.') &sdot;
                            button.calculator__operator(type='button' data-equals='=') &equals;
        +frameSlide 
            +frameContent 
                h2 Coming soon...
            +frameContent
